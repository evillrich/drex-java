{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Drex Pattern Schema",
  "description": "Schema for Drex document extraction patterns. Drex is a line-oriented pattern matching language for extracting structured data from semi-structured text documents. It processes documents line by line, similar to how regular expressions process character streams, with support for fuzzy matching to handle OCR noise and document variations.",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "comment": {
      "type": "string",
      "description": "Optional description of what this pattern extracts and its purpose"
    },
    "editDistance": {
      "type": "integer",
      "minimum": 0,
      "description": "Maximum edit distance allowed for fuzzy matching. Default is 0 (exact matching)."
    },
    "tokens": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/patternNode"
      }
    },
    "bind": {
      "type": "string",
      "description": "Optional object to bind to. If present, the entire matched document binds under this key. Behaves like a group bind at the top level."
    }
  },
  "required": [
    "tokens"
  ],
  "$defs": {
    "groupNode": {
      "type": "object",
      "description": "Groups pattern nodes for sequential matching, similar to parentheses '()' in regex",
      "properties": {
        "comment": {
          "type": "string"
        },
        "bind": {
          "type": "string"
        },
        "tokens": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/patternNode"
          }
        }
      },
      "required": [
        "tokens"
      ],
      "additionalProperties": false
    },
    "repeatNode": {
      "type": "object",
      "description": "Repeats pattern nodes with specified repetition mode, similar to quantifiers '*', '+', '?' in regex. Always produces an array output (empty array if no matches).",
      "properties": {
        "comment": {
          "type": "string"
        },
        "bind": {
          "type": "string"
        },
        "mode": {
          "enum": [
            "zeroOrMore",
            "oneOrMore",
            "zeroOrOne"
          ],
          "description": "Repetition mode: 'zeroOrMore' (*), 'oneOrMore' (+), 'zeroOrOne' (?)"
        },
        "tokens": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/patternNode"
          }
        }
      },
      "required": [
        "mode",
        "tokens"
      ],
      "additionalProperties": false
    },
    "orNode": {
      "type": "object",
      "description": "Tries alternative pattern nodes until one succeeds, similar to alternation '|' in regex",
      "properties": {
        "comment": {
          "type": "string"
        },
        "bind": {
          "type": "string"
        },
        "tokens": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/patternNode"
          }
        }
      },
      "required": [
        "tokens"
      ],
      "additionalProperties": false
    },
    "lineNode": {
      "type": "object",
      "description": "Matches a line against a regular expression pattern",
      "properties": {
        "comment": {
          "type": "string"
        },
        "regex": {
          "type": "string",
          "pattern": ".+",
          "description": "Regular expression pattern (cannot be empty)"
        },
        "bind": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "format": {
                    "type": "string",
                    "description": "Formatter name (with optional parameters) to normalize captured values to a consistent string. If formatting fails, the raw captured string is returned."
                  }
                },
                "required": [
                  "path"
                ]
              }
            },
            {
              "type": "object",
              "properties": {
                "path": {
                  "type": "string"
                },
                "format": {
                  "type": "string",
                  "description": "Formatter name (with optional parameters) to normalize captured values to a consistent string. If formatting fails, the raw captured string is returned."
                }
              },
              "required": [
                "path"
              ]
            }
          ]
        }
      },
      "required": [
        "regex"
      ],
      "additionalProperties": false
    },
    "anylineNode": {
      "type": "object",
      "description": "Matches any single line, similar to '.' in regex but for entire lines",
      "properties": {
        "comment": {
          "type": "string"
        },
        "bind": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "patternNode": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "group"
          ],
          "properties": {
            "group": {
              "$ref": "#/$defs/groupNode"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "repeat"
          ],
          "properties": {
            "repeat": {
              "$ref": "#/$defs/repeatNode"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "or"
          ],
          "properties": {
            "or": {
              "$ref": "#/$defs/orNode"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "line"
          ],
          "properties": {
            "line": {
              "$ref": "#/$defs/lineNode"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "anyline"
          ],
          "properties": {
            "anyline": {
              "$ref": "#/$defs/anylineNode"
            }
          }
        }
      ]
    }
  }
}